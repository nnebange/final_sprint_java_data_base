<!DOCTYPE html>  
<html lang="en">  
<head>  
   <meta charset="UTF-8">  
   <meta name="viewport" content="width=device-width, initial-scale=1.0">  
   <title>Polls Dashboard</title>  
   <link rel="stylesheet" href="/styles.css">  
</head>  
<body>  
   <%- include('../partials/header') %>  
   <div class="container">  
      <h1>Polls Dashboard</h1>  
      <p>Total Polls: <%= pollCount %></p>  
      <div id="polls">  
        <% if (polls.length === 0) { %>  
           <p>No polls available. <a href="/createPoll">Create a new poll</a></p>  
        <% } else { %>  
           <% polls.forEach(poll => { %>  
              <div class="poll-container" data-poll-id="<%= poll._id %>">  
                <h2><%= poll.question %></h2>  
                <ul class="poll-options">  
                   <% poll.options.forEach(option => { %>  
                      <li data-option-id="<%= option._id %>">  
                        <%= option.answer %> - Votes:  
                        <span class="vote-count"><%= option.votes %></span>  
                        <button onclick="vote('<%= poll._id %>', '<%= option._id %>')">  
                           Vote  
                        </button>  
                      </li>  
                   <% }) %>  
                </ul>  
              </div>  
           <% }) %>  
        <% } %>  
      </div>  
   </div>  
   <script src="/frontend.js"></script>  
</body>  
</html>
