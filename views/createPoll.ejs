<!DOCTYPE html>  
<html lang="en">  
<head>  
   <meta charset="UTF-8">  
   <meta name="viewport" content="width=device-width, initial-scale=1.0">  
   <title>Create Poll</title>  
   <link rel="stylesheet" href="/styles.css">  
</head>  
<body>  
   <%- include('partials/header') %>  
   <div class="container">  
      <h1>Create a New Poll</h1>  
      <form action="/createPoll" method="POST">  
        <div class="form-input-container">  
           <label for="question">Question:</label>  
           <input type="text" id="question" name="question" required>  
        </div>  
        <div id="options">  
           <div class="form-input-container">  
              <label for="option1">Option 1:</label>  
              <input type="text" id="option1" name="options[0]" required>  
           </div>  
           <div class="form-input-container">  
              <label for="option2">Option 2:</label>  
              <input type="text" id="option2" name="options[1]" required>  
           </div>  
        </div>  
        <button type="button" onclick="addOption()">Add Option</button>  
        <button type="submit">Create Poll</button>  
      </form>  
   </div>  
   <script>  
      let optionCount = 2;  
      function addOption() {  
        optionCount++;  
        const optionsDiv = document.getElementById('options');  
        const newOption = document.createElement('div');  
        newOption.className = 'form-input-container';  
        newOption.innerHTML = `  
           <label for="option${optionCount}">Option ${optionCount}:</label>  
           <input type="text" id="option${optionCount}" name="options[${optionCount-1}]" required>  
        `;  
        optionsDiv.appendChild(newOption);  
      }  
   </script>  
</body>  
</html>
